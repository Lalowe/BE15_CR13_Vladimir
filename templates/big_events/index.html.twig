{% extends 'base.html.twig' %}
{% block body %}
   <h2 class="page-header mt-3" style="color:#FFD700 " > Events </h2>
   <div class="container">
         <div class="row m-1 gap-3 justify-content-center  row-cols-lg-1 row-cols-md-1 row-cols-sm-1 mt-5">
         <div class="card-group gap-3  ">
   
        {% for event in events %} 
       
          <div class="card border-0 shadow-sm p-3  mb-3 bg-body rounded" style="width: 22rem;  ">
          <img src="{{asset('pictures/' ~ event.picture)}}" class="card-img-top" height="200" style="object-fit:cover; object-position:center" alt="">
  {# <img src="{{asset('pictures/' ~ event.picture)}}" class="card-img-top" alt="..."> #}
  <div class="card-body border " style="background-color: rgb(250, 243, 243)">
    <h5 class="card-title">{{event.name}}</h5>
    <hr>
    <p class="card-text">{{event.description}}</p>
     <hr>
   
 <a href="/details/{{event.id}}" class="btn btn-outline-dark">Detail</a> {# a tag to go to the path /details/{{event.id}} so we send the id of the record with the path (like when we are using get method ) #}   
 <a href="/edit/{{event.id}}" class="btn btn-outline-dark">Edit</a>
 <a href="/delete/{{event.id}}" class="btn btn-outline-dark">Delete</a>
</div>
</div>

           {% endfor %}
</div>
</div>
</div>
     
{% endblock %}

